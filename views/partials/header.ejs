<!DOCTYPE html>

<head>
    <link rel='stylesheet' href=' https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.4/semantic.css'>
    <script src="https://kit.fontawesome.com/48d4048ec6.js" crossorigin="anonymous"></script>
    <link rel='stylesheet' href='/stylesheets/app.css'>
    <script src="https://js.pusher.com/6.0/pusher.min.js"></script>
    <script src='/script/app.js'></script>
    <script src="https://cdn.tiny.cloud/1/1vqrsf1ru8rizeni0wnyw2chll32wmhseaf2fohv8z7e8fsq/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            toolbar_mode: 'floating',
            menubar: 'false',
            plugins: 'importcss directionality code visualblocks visualchars charmap advlist lists textpattern noneditable help charmap emoticons',
            toolbar: 'undo redo | bold italic underline strikethrough | fontselect fontsizeselect formatselect | alignleft aligncenter alignright alignjustify | outdent indent |  numlist bullist | charmap emoticons',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });
    </script>
    <title>ThinkLog | Share Your Thoughts</title>
</head>

<body>
    <div class='ui fixed inverted menu'>
        <div class='ui conatiner'>
            <div class='header item'><i class="quote right icon"></i>
             <b><a style="color: white;" href="/"><h2 id="logo-heading">ThinkLog</h2></a></b>
            </div>
        </div>
        <% if(currentUser){%>
        <a href="/blogs" class='item'>Home</a>
        <a href="/blogs/new" class='item'>New Post</a>
        <% } %>
        <div class="right menu">
            <% if(currentUser){%>
            <a class="ui item" href="#">Hello, <%=currentUser.username%></a>
            <a class="ui item" href="/logout">
                Logout
            </a>
            <% }else{ %>
            <a class="ui item" href="/register">Register</a>
            <a class="ui item" href="/login">Login</a>
            <% } %>
        </div>
    </div>